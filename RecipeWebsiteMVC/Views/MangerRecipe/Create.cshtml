@model RecipeWebsiteMVC.Models.Recipe
@{
    ViewData["Title"] = "Skapa Recept";
}

<input type="hidden" id="IngridientCount" value="@ViewBag.IngridientsCount"> 
<input type="hidden" id="DirectionCount" value="@ViewBag.DirectionsCount">


<h1>Skapa</h1>
<h4>Recept</h4>
<hr />
<div asp-validation-summary="All"></div>
<div class="row">
    <form asp-action="Create"> 
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="container">
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Category" class="control-label"></label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label"></label>
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Portions" class="control-label"></label>
                        <input asp-for="Portions" class="form-control" />
                        <span asp-validation-for="Portions" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-4">

                    
                    @for (var i = 0; i < ViewBag.IngridientsCount; i++)
                    {
                     <div class="form-group">
                        <input asp-for="Ingredients[i].Unit" class="form-control" placeholder="Antal" />
                        <span asp-validation-for="Ingredients[0].Unit" class="text-danger"></span>

                        <input asp-for="Ingredients[i].UnitType" class="form-control" placeholder="Enhet" />
                        <span asp-validation-for="Ingredients[i].UnitType" class="text-danger"></span>

                        <input asp-for="Ingredients[i].Name" class="form-control" placeholder="Namn på ingridiens" />
                        <span asp-validation-for="Ingredients[i].Name" class="text-danger"></span>
                    </div>
                    }
                        

                    
                    <div id="input_fields_ingridients"> </div>
                   
                        <input type="button"
                               value="Lägg till ingridiens"
                               class="btn btn-primary"
                               id="NewIngridient" />
                </div>
                <div class="col-4">
                    <div class="form-group">
                    @for (var i = 0; i < ViewBag.DirectionsCount; i++)
                    {
                        <input asp-for="Directions[i].Text" class="form-control" placeholder="Instruktion" />
                        <span asp-validation-for="Directions[i].Text" class="text-danger"></span>
                    }
                        
                    </div>
                    <div id="NewFieldOutPut"></div>
                    <input type="button" id="NewDirection" value="Lägg till instruktion" class="btn btn-primary" />
                </div>
           </div>
        </div>

    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script src="~/js/NewIngrdientsField.js"></script>
<script src="~/js/NewInstruktionField.js"></script>

<!--Client side validation-->
@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
