@using RecipeWebsiteMVC.Models.ViewModels
@model RecipeVM

<div class="card container pt-4">
    <div class="card-header bg-primary ms-lg-0 row">
        <div class="col-12 col-md-6">
            <h1 class="text-light">@Model.recipe.Title</h1>
        </div>
        <div class="col-12 col-md-6 text-end pt-4">
            <span class="badge bg-info pt-2"> @Model.recipe.Category </span>
        </div>
    </div>
    <div class="card-body container row">
        <div class="col-12 col-md-6">
            <img class="img-thumbnail img-extra" src="~/@Model.recipe.Image" alt="@Model.recipe.Title picture" />
        </div>
        <div class="col-12 col-md-6 row align-content-center">
            <p class="card-text">@Model.recipe.Description</p>
        </div>
     </div>
              <!-- Fixa portions med drop down select skit   -->
            <form asp-action="Details">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="col-6 row align-items-center">
                <div class="col-12">
                    <label asp-for="Multiplier" class="control-label"></label>
                    </div>
                 <div class="col-2 mt-1">
                    <input asp-for="Multiplier" type="number" class="form-control" />
                    <span asp-validation-for="Multiplier" class="text-danger"></span>
                </div>
                  <div class="col mt-1">
                    <input type="submit" value="Change" class="btn btn-sm btn-outline-success" />

             </div>

           </div>

            </form>
        <div class="row">
            <div class="col-6 col-md-6 col-sm-12">
                <ul>
                   @foreach(var r in Model.recipe.Ingredients)
                    {
                        <li> <!--Fix det heading/ underrubrik här-->
                            <span>@(r.Unit.HasValue ? String.Format("{0:0.0}", r.Unit) : " ") </span> <!--Avrundar även här tror format i ingridients borde funka men aja-->
                            <span>@r.UnitType </span>
                            <span>@r.Name</span>
                        </li>
                    }
                </ul>                 
             </div>
                <div class="col-6 col-md-6 col-sm-12">
                <ol>
                   @foreach(var d in Model.recipe.Directions)
                    {
                        <li>
                            <p class="card-text">@d.Text</p>
                        </li>
                    }
                </ol>                 
             </div>
        </div>
    </div> 
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}