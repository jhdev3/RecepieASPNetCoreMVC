@model IEnumerable<Recipe>

    <partial name="_notification" />


<div class="row pb-3">
    @foreach (var recipe in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="~/@recipe.Image" class="card-img-top rounded" />

                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@recipe.Title</p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-area="User" asp-controller="Home" asp-action="Details" class="btn btn-sm btn-primary" asp-route-id="@recipe.Id">
                            Details
                        </a>
                         <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-RecipieID="@recipe.Id">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
